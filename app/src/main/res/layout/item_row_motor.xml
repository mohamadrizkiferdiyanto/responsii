<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">
    <ImageView
        android:id="@+id/img_motor_foto"
        android:layout_height="100dp"
        android:layout_width="80dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        tools:src="@drawable/honda" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_motor_foto"
        android:layout_toEndOf="@id/img_motor_foto"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_motor_name"
            tools:text="Suzuki"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_motor_desc"
            tools:text="Motor Pertama RI"/>

    </LinearLayout>

</RelativeLayout>